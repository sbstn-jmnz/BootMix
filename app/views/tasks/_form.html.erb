<%= simple_form_for @task, remote: true do |f|   %>
  <%= f.input  :description, as: :text           %>
  <%= f.input  :deadline,    as: :datetimepicker %>
  <%= f.button :submit %>
<% end %>
<script type="text/javascript">
$(document).ready(function() {
  $('#datetimepicker1').datetimepicker();
});
</script>