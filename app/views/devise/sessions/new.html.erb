<div class="row" >	
	<div class="col-xs-2 col-sm-2 col-md-2 col-md-offset-5">
		<h1></h1>
		<h2>Sample App</h2>
		<div class="form-group">
		<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
		<%= f.input :email, required: true, autofocus: true, label:false, placeholder: 'your@mail.com' %>
		<%= f.input :password, required: true,label:false, placeholder: 'password' %>
		<%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
		<%= f.button :submit, "Go!", class: "btn btn-success btn-lg btn-block" %>
		<% end %>
	</br>
		<%= render "devise/shared/links" %>
	</div>
</div>


